<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GateMonitor</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GateMonitor.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">GateMonitor</a>
                
                <button class="navbar-toggler" id="navbarToggler" type="button" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto me-auto mb-2 mb-lg-0 w-100 text-center">
                        <li class="nav-item">
                            <a class="nav-link text-light fs-5 p-3" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fs-5 p-3" asp-area="" asp-page="/Workers">Workers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fs-5 p-3" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    <div class="d-flex gap-2 flex-nowrap me-5 pe-2">
                        <a class="btn btn-light fs-5 col-md-8" asp-page="/AddWorker">Add Worker</a>
                        <a class="btn btn-outline-light fs-5 col-md-8 text-white" onclick="confirmLogout()">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- confirm modal -->
    <div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Action</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to <span id="actionText"></span>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="modalConfirmButton">Yes, proceed</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container text-center">
            <span class="text-muted">&copy; 2025 GateMonitor. <a asp-area="" asp-page="/Privacy">Privacy</a></span>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.8/signalr.min.js"></script>
    
    <script>
        const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
        const actionText = document.getElementById('actionText');
        const confirmModalBtn = document.getElementById('modalConfirmButton');
        let modalAction = null;

        function confirmLogout(redirectUrl = "/Logout") {
            actionText.textContent = "log out";
            modalAction = async () => {
                window.location.href = redirectUrl;
            };
            confirmModal.show();
        }

        function confirmAction(message, actionCallback) {
            actionText.textContent = message;
            modalAction = actionCallback;
            confirmModal.show();
        }

        confirmModalBtn.addEventListener('click', async () => {
            if (modalAction) {
                await modalAction();
                confirmModal.hide();
                modalAction = null;
            }
        });
    </script>
    
    <script>
        (function () {
            const toggler = document.getElementById('navbarToggler');
            const menuElem = document.getElementById('navbarContent');

            if (!toggler || !menuElem || !window.bootstrap) {
                console.warn('Navbar debug: missing elements or bootstrap not loaded');
                return;
            }
            
            const bsCollapse = bootstrap.Collapse.getOrCreateInstance(menuElem, { toggle: false });
            
            menuElem.addEventListener('show.bs.collapse', () => console.log('collapse: show'));
            menuElem.addEventListener('shown.bs.collapse', () => console.log('collapse: shown'));
            menuElem.addEventListener('hide.bs.collapse', () => console.log('collapse: hide'));
            menuElem.addEventListener('hidden.bs.collapse', () => console.log('collapse: hidden'));
            
            toggler.addEventListener('click', (ev) => {
                ev.preventDefault();
                bsCollapse.toggle();
            });
            
            document.querySelectorAll('#navbarContent .nav-link').forEach(link => {
                link.addEventListener('click', () => {
                    if (window.getComputedStyle(toggler).display !== 'none') {
                        bsCollapse.hide();
                    }
                });
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
